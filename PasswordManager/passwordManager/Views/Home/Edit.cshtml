@model passwordManager.Models.NewPassword
@{
    ViewBag.Title = "Edit";
}

<!--<h1>Save/Edit</h1>-->
<br />

<form method="post" action="">
    <input type="hidden" id="NewPasswordId" name="NewPasswordId" value="@Model.NewPasswordId" />
    <input type="hidden" id="UserId" name="UserId" value="@Session["UserId"]" />

    <div class="form-group">
        <lable><span class="glyphicon glyphicon-user" aria-hidden="true"></span>帳號</lable>
        <input class="form-control" type="text" 
               id="Account " name="SourceAccount" 
               value="@Model.SourceAccount" placeholder="請輸入你的帳號">
    </div>

    <div class="form-group">
        <lable><span class="glyphicon glyphicon-tag" aria-hidden="true"></span>來源</lable>
        <input class="form-control" type="text" 
               id="Source" name="SourceName" 
               value="@Model.SourceName" placeholder="例如：Google">
    </div>

    <div class="form-group">
        <lable><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>其他備註</lable>
        <input class="form-control" type="text" 
               id="OtherText" name="StateText" 
               value="@Model.StateText">
        @*<textarea class="form-control" 
                  id="OtherText" name="StateText" 
                  value="@Model.StateText">
        </textarea>*@
    </div>

    <div class="form-group">
        <lable><span class="glyphicon glyphicon-lock" aria-hidden="true"></span>新密碼</lable>
        <input class="form-control" type="text" 
               id="NewPassword" name="PasswordText" 
               value="@Model.PasswordText" readonly="readonly">
    </div>

    <br />
    <button class="btn btn-info" type="submit" 
            id="OkOrCancel" name="OkOrCancel" 
            value="Ok">
        儲存
    </button>
    <button class="btn btn-default" type="submit" 
            id="OkOrCancel" name="OkOrCancel" 
            value="Cancel">
        取消
    </button>
</form>
