@model List<passwordManager.Models.ShowList>
@{
    ViewBag.Title = "Index";
    int i=0;
}


<!--<h1>List of Password<span class="pull-right"><a class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus"></a></span></h1>-->

<br />
<a href="/Home/CreatePwText/" class="btn btn-primary btn-lg">
    <span class="glyphicon glyphicon-plus"></span>
    &nbsp;
    <span class="glyphicon glyphicon-th-list"></span>
</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-xs-2">次序</th>
            <th class="col-xs-3">來源</th>
            <th class="col-xs-4">帳號</th>
            <th class="col-xs-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var npw in Model) {
            <tr>
                <td>@(i+1)</td>
                <td>@npw.SourceName</td>
                <td>@npw.SourceAccount</td>
                <td>
                    <span class="pull-right">
                        <a href="/Home/Return/@npw.NewPasswordId" class="btn btn-success"><span class="glyphicon glyphicon-refresh"></span></a>
                        <a href="/Home/Edit/@npw.NewPasswordId" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></a>
                        <a href="/Home/Delete/@npw.NewPasswordId" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
                    </span>
                </td>
            </tr>
            i++;
        }

    </tbody>
</table>


<form method="post">
    <div class="btn-group">
        @*<a href="#" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-chevron-right"></span></a>*@
        <button type="submit" name="FlipPage" value="-1" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </button>
        <button type="submit" name="FlipPage" value="1" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </button>
    </div>
</form>


